{
  "manifest_version": 3,
  "name": "Pick AI",
  "version": "0.1.0",
  "description": "Double click anywhere to get verified AI answers",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
